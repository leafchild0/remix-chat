{
  "name": "t-chat",
  "version": "1.0.0",
  "description": "Simple chat app using sockets and node",
  "main": "index.js",
  "scripts": {
    "build": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "format": "prettier --write .",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc -b",
    "start": "cross-env NODE_ENV=production node ./server.js"
  },
  "author": "leafchild0",
  "license": "ISC",
  "dependencies": {
    "@remix-run/express": "^1.19.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "lru-cache": "^10.0.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
